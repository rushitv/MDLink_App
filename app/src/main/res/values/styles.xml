<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorAccent</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextBold" parent="Text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMini" parent="Text">
        <item name="android:textSize">@dimen/textSizeMini</item>
    </style>

    <style name="TextMini.Bold" parent="TextBold">
        <item name="android:textSize">@dimen/textSizeMini</item>
    </style>

    <style name="TextSmall" parent="Text">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="TextSmall.Bold" parent="TextBold">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="TextMedium" parent="Text">
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="TextMedium.Bold" parent="TextBold">
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="TextLarge" parent="Text">
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <style name="TextLarge.Bold" parent="TextBold">
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <style name="TextHuge" parent="Text">
        <item name="android:textSize">@dimen/textSizeHuge</item>
    </style>

    <style name="TextHuge.Bold" parent="TextBold">
        <item name="android:textSize">@dimen/textSizeHuge</item>
    </style>

    <style name="LightDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <style name="MenuHeaderItem">
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="MenuHeader" parent="MenuHeaderItem">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>

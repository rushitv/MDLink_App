<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:targetApi="o">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar_mdlink" />

    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_doctor_portal_"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.example.mrprashant_patel.mdlink.Doctor_portal_Activity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pad_5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_already_have_account"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/singup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_5"
                    android:clickable="true"
                    android:text="@string/label_signin"
                    android:textColor="@color/colorButtonBackground"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtEmailDP"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="08dp"
                    android:hint="Email Address"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/edtFullNameDP"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="08dp"
                    android:hint="Full Name"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="08dp"
                android:text="@string/label_phone_number"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <Spinner
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="08dp"
                    android:visibility="gone">

                </Spinner>

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccpDoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_defaultNameCode="JM" />

                <EditText
                    android:id="@+id/edtPhoneDP"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/label_phone_number"
                    android:inputType="number"
                    android:textSize="14sp" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/edtAgeDP"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="08dp"
                    android:hint="Age"
                    android:inputType="number"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">


                <EditText
                    android:id="@+id/edtQualificationDP"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="08dp"
                    android:hint="Qualifcation"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/edtSpecialityDP"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="08dp"
                    android:hint="Specialty"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/edtMedicalSchoolDP"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="08dp"
                    android:hint="Medical School"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/edtMedicalCouncilDP"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="08dp"
                    android:hint="Medical Council"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/edtMedicalYearOfGraduationDP"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="08dp"
                    android:hint="Year Of Graduation"
                    android:inputType="number"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/edtRegistrationNumberDP"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="08dp"
                    android:hint="Registration Number"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/edtLocationCountryDP"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="08dp"
                    android:hint="Location/Country"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/edtPasswordDP"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="08dp"
                    android:hint="Password"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/edtConfirmPasswordDP"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="08dp"
                    android:hint="Confirm Password"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="08dp"
                android:text="Available Days" />

            <CheckBox
                android:id="@+id/checkboxSunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sunday" />

            <CheckBox
                android:id="@+id/checkboxMonday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monday" />

            <CheckBox
                android:id="@+id/checkboxTuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tuesday" />

            <CheckBox
                android:id="@+id/checkboxWednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wednesday" />

            <CheckBox
                android:id="@+id/checkboxThursday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thursday" />

            <CheckBox
                android:id="@+id/checkboxFriday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friday" />

            <CheckBox
                android:id="@+id/checkboxSaturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saturday" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Available Morning Time" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/edtAvailMorningTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusableInTouchMode="false"
                        android:hint="From(12:00 AM)"
                        android:onClick="onClick" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/edtAvailMorningTimeTO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:focusableInTouchMode="false"
                        android:hint="To (12:00 PM)" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="08dp"
                android:text="Available Evening Time" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/edtAvailEveningTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:focusableInTouchMode="false"
                        android:hint="From(12:00 AM)" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/edtAvailEveningTimeTO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:focusableInTouchMode="false"
                        android:hint="To (12:00 PM)" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/signcture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="08dp"
                android:text="Signature" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/doc_selectfile"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_btn"
                    android:clickable="true"
                    android:focusableInTouchMode="false"
                    android:hint="@string/label_tap_to_sign"
                    android:paddingLeft="4dp"
                    android:textColorHint="@color/colorWhite" />

                <TextView
                    android:id="@+id/tvSignaturePath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/doc_selectfile"
                    android:padding="8dp"
                    android:textSize="14sp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="08dp"
                android:text="@string/label_medical_certificate" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/doc_file"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_btn"
                    android:clickable="true"
                    android:focusableInTouchMode="false"
                    android:hint="@string/label_attach_file"
                    android:paddingLeft="4dp"
                    android:textColorHint="@color/colorWhite" />

                <TextView
                    android:id="@+id/tvSelectedFilePath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/doc_file"
                    android:padding="8dp"
                    android:textSize="14sp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pad_10">

                <RadioButton
                    android:checked="false"
                    style="@style/TextSmall"
                    android:id="@+id/rdb_terms_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/i_agree" />

                <TextView
                    style="@style/TextSmall"
                    android:id="@+id/tv_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_5"
                    android:clickable="true"
                    android:text="@string/terms"
                    android:textColor="@color/colorButtonBackground"
                    android:textStyle="bold" />

                <TextView
                    style="@style/TextSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_5"
                    android:text="@string/and"
                    android:textColor="@color/colorBlack" />

                <TextView
                    style="@style/TextSmall"
                    android:id="@+id/tv_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_5"
                    android:clickable="true"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/colorButtonBackground"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pad_5">

                <TextView
                    style="@style/TextMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disclaimer" />
            </LinearLayout>

            <TextView
                android:id="@+id/btnSubmit"
                style="@style/TextMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_15"
                android:background="@drawable/custom_btn"
                android:clickable="true"
                android:gravity="center"
                android:padding="04dp"
                android:text="REGISTER"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>